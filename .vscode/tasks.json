{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Gateway: Dev",
            "type": "shell",
            "command": "pnpm start:dev gateway",
            "group": "none",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "isBackground": true,
            "problemMatcher": {
                "owner": "node",
                "fileLocation": "relative",
                "pattern":[
                    {
                        "regexp": "^([^\\\\s].*)\\\\((\\\\d+,\\\\d+)\\\\):\\\\s*(.*)$",
                        "file": 1,
                        "location": 2,
                        "message": 3
                    }
                ],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "Testitest",
                    "endsPattern": "^No errors found."
                }
            }
        },
        {
            "label": "Auth: Dev",
            "type": "shell",
            "command": "pnpm start:dev auth",
            "group": "none",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "isBackground": true,
            "problemMatcher": {
                "owner": "node",
                "fileLocation": "relative",
                "pattern":[
                    {
                        "regexp": "^([^\\\\s].*)\\\\((\\\\d+,\\\\d+)\\\\):\\\\s*(.*)$",
                        "file": 1,
                        "location": 2,
                        "message": 3
                    }
                ],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "Testitest",
                    "endsPattern": "^No errors found."
                }
            }
        },
        {
            "label": "All: Dev",
            "dependsOn": [
                "Gateway: Dev",
                "Auth: Dev"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "runOptions": {
                "runOn": "folderOpen"
            }
        }
    ]
}